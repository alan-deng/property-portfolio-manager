    </div>
  </nav>
  <h1>Your Properties</h1>

  <!-- removing container so the cards span the whole page; every other page will retain the container and have a conditional navbar on the side? -->
<div class="container-fluid h-auto">
  <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 gap-4 justify-content-center border-start border-end">
    <% userProperties.forEach(property => { %>
      <div class="card p-2 col border border-2 rounded">
        <img class='card-image' src="<%= property.img %>"   height="50%">
        <a class='mx-2'href="/users/<%=userId%>/Properties/<%=property._id%>"><%= property.name%></a>
        <p><%= property.address%></p>
        <p><b>Tenants</b></p>
        <%if(!property.tenants.length){%>
          <p>No Tenants</p>
        <%}%>
        <%for (let i = 0; i < Math.min(2, property.tenants.length); i++){%>
          <p><%=property.tenants[i].name%></p>
          <%if(i === 1 && i < property.tenants.length - 1){%>
            <p>More tenants in details page</p>
          <%}%>
        <%}%>
      </div>
      <% }) %>
  </div>

</div>



</body>

</html>
