<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Edit Views Property</title>
  <script src="https://kit.fontawesome.com/c2796a7354.js" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.4/css/fontawesome.min.css" rel="stylesheet">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <link rel='stylesheet' href='/style.css'>
  <script src='https://code.jquery.com/jquery-3.6.0.min.js'></script>
</head>

<body>
  <h1>Edit Property</h1>
  <nav class="navbar navbar-expand-lg bg-secondary">
    <div class="collapse navbar-collapse">
    <ul class='navbar-nav mx-auto mb-2 mb-lg-0'>
      <li class="nav-item mx-4">
        <a href="/users/<%=userId%>/properties/">Home Page</a>
      </li>
      <li class="nav-item mx-4">
        <a href="/users/<%=userId%>/properties/map">Map of Properties</a>
      </li>
      <li class="nav-item mx-4">
        <a href="/users/<%=userId%>/properties/new">Add New Property</a>
      </li>
      <li class="nav-item mx-4">
        <a href="/users/<%=userId%>/edit">Edit User Information</a>
      </li>
      <li class="nav-item mx-4">
        <a href="/logout">Logout</a>
      </li>
    </ul>
    
    </div>
  </nav>
  <nav class="navbar navbar-expand-lg navbar-light bg-primary">
    <div class="collapse navbar-collapse">
    <ul class='navbar-nav mx-auto mb-2 mb-lg-0'>
      <li class="nav-item mx-4">
        <a href="/users/<%=userId%>/properties/<%=property._id%>/edit">Edit Property Info</a>
      </li>
      <li class="nav-item mx-4">
        <a href="/users/<%=userId%>/properties/<%=property._id%>/tenants/new">Add Tenant</a>
      </li>
      <li class="nav-item mx-4">
        <a href="/users/<%=userId%>/properties/<%=property._id%>/tenants/">Tenant Details</a>
      </li>
    </ul>
    </div>
  </nav>
  
  <div class="card mx-auto" style="width:40rem;">
  <form action="/users/<%=userId%>/properties/<%=property._id%>?_method=PUT" method="POST">

    Name: <input class='mb-2' id="name" type="text" name="name" value="<%=property.name%>" required/>
    <br />

    Buy Price: $<input class='mb-2' id="buyPrice" type="number" name="buyPrice" value="<%=property.buyPrice%>" />
    <br />


    
    <label for="img">Edit Image URL</label>
    <input type="text" name="img" id="img" value="<%=property.img%>" /></br>
    <div id='misc_fees'>
    <p>Misc Fees</p>
    <% for (let i = 0; i < property.fees.length; i++){%>
      <label for='fees_name_<%=i%>'>Fee Name: </label><input type="text" name='fees_name_<%=i%>' id='fees_name_<%=i%>' value='<%=property.fees[i].name%>' /> 
      <label for='fees_value_<%=i%>'>Fee Amount: </label><input type="number" name='fees_value_<%=i%>' id='fees_value_<%=i%>' value='<%=property.fees[i].amount%>' /> 
    <%}%>
    </div>
    <p id='new_misc_fee'>Add Misc Fee</p>
    <input type="submit" name="" value="Submit Edit" id='edit_prop_btn' />
  </div>
  <script>
    let lastFee = $('#misc_fees :last-child')
    let i = parseInt(lastFee.attr('name').slice(-1)) + 1
    $('#new_misc_fee').on('click', () => {
      $('#misc_fees').append(`<label for='fees_name_${i}'>Fee Name: </label><input type="text" name='fees_name_${i}' id='fees_name_${i}' /> 
      <label for='fees_value_${i}'>Fee Amount: </label><input type="number" name='fees_value_${i}' id='fees_value_${i}' /> `)
      i++
    })
  
  </script>
</body>

</html>
