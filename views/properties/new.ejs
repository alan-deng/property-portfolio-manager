    <h1>Add New Property</h1>
    
    <div class="card mx-auto border border-2 p-2 h-auto" style="width: 50vw">
      <form
        action="/users/<%=userId%>/properties/"
        method="POST"
        id="new_prop_form"
        enctype="multipart/form-data"
      >
        <label for="name">Name: </label
        ><input class="mb-2" id="name" type="text" name="name" required />
        <br />

        <label for="buyPrice"></label>Buy Price: $<input
          class="mb-2"
          id="buyPrice"
          type="number"
          name="buyPrice"
        />
        <br />

        <label for="address"></label>Address:
        <input class="mb-2" id="address" type="text" name="address" required />
        <br />
        <label for="img_upload">Add Image (accepts png/jpg files)</label
        ><br/>
        <input type="file" name="img_upload" id="img_upload" accept="image/png, image/jpeg" />
        <br />
        <div id="misc_fees">
        <p class='mx-0'>Misc Fees</p>
      </div>
        <input type='button' id='new_misc_fee' value='Add Misc Fee' class='my-2'></input>
        <br/>
        <input
          type="submit"
          name=""
          value="Create Property"
          id="create_prop_btn"
        /><br />
      </form>
    </div>
    <script>
      let i = 0;
      $("#new_misc_fee").on("click", () => {
        $("#misc_fees")
          .append(`<label for='fees_name_${i}' class='my-2'>Fee Name: </label><input type="text" name='fees_name_${i}' id='fees_name_${i}' /> 
    <label for='fees_value_${i}'>Fee Amount: </label><input type="number" name='fees_value_${i}' id='fees_value_${i}' /> `);
        i++;
      });
    </script>
  </body>
