    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New tenant page</title>
    <script src="https://kit.fontawesome.com/c2796a7354.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.4/css/fontawesome.min.css" rel="stylesheet">

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!-- Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/style.css'>
</head>
<body>
    <h1>Add New Tenant</h1>
    <nav class="navbar navbar-expand-lg navbar-light bg-secondary">
        <div class="collapse navbar-collapse">
        <ul class='navbar-nav mx-auto mb-2 mb-lg-0'>
          <li class="nav-item mx-4">
            <a href="/users/<%=userId%>/properties/">Home Page</a>
          </li>
          <li class="nav-item mx-4">
            <a href="/users/<%=userId%>/properties/map">Map of Properties</a>
          </li>
          <li class="nav-item mx-4">
            <a href="/users/<%=userId%>/properties/new">Add New Property</a>
          </li>
          <li class="nav-item mx-4">
            <a href="/users/<%=userId%>/edit">Edit User Information</a>
          </li>
          <li class="nav-item mx-4">
            <a href="/logout">Logout</a>
          </li>
        </ul>
        </div>
      </nav>
      <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="collapse navbar-collapse">
        <ul class='navbar-nav mx-auto mb-2 mb-lg-0'>
          <li class="nav-item mx-4">
            <a href="/users/<%=userId%>/properties/<%=propertyId%>">Property Details</a>
          </li>
          <li class="nav-item mx-4">
            <a href="/users/<%=userId%>/properties/<%=propertyId%>/tenants/new">Add Tenant</a>
          </li>
          <li class="nav-item mx-4">
            <a href="/users/<%=userId%>/properties/<%=propertyId%>/tenants/">Tenant Details</a>
          </li>
        </ul>
        </div>
      </nav>
      <div class="card mx-auto" style="width:40rem;">
    <form class='mx-2'action="/users/<%=userId%>/properties/<%=propertyId%>/tenants" method="POST">
        Name: <input class='mb-2' type="text" name="name" required></br>
        Rent: <input class='mb-2' type="number" name="rent"></br>
        Contact number: <input class='mb-2' type="tel" name="contactNum"></br>
        Contact email: <input class='mb-2' type="email" name="contactEmail"></br>
        Property Rented: <input class='mb-2' type="text" id="display-property" value="<%=propertyRented.name%>" disabled></br>
        <input type="hidden" name="propertyRented" value="<%=propertyId%>">
        <input type="submit" value="Add New Tenant">
    </form>
      </div>
</body>
</html>
